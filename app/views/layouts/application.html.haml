      %a.navbar-brand{ href: "#" } Super Rating Chińczyków
      %button.navbar-toggler{ "aria-controls": "navbarNav", "aria-expanded": "false", "aria-label": "Toggle navigation", "data-target": "#navbarNav", "data-toggle": "collapse", :type => "button" }
        %span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        %ul.navbar-nav
          %li.nav-item
            %a.nav-link{ href: "#" }
              Strona główna
              %span.sr-only (current)
          %li.nav-item
            %a.nav-link{ href: "#" } raz
          %li.nav-item
            %a.nav-link{ href: "#" } dwa
          %li.nav-item
            %a.nav-link{ href: "#" } trzy
  %body
    = yield
